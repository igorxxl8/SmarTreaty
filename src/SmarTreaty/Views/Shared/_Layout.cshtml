<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SmarTreaty</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/cmsys.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

<aside>
    <nav id="sidebar" data-spy="scroll" class="bg-light">
        <div id="sidebar-header" class="sidebar-header" style="background-color: #222;">
            <div class="pt-2">
                <div class="d-flex pt-1 px-2">
                    <h3>
                        @Html.ActionLink("SmarTreaty", "Index", "Home", new { area = "" }, new { @class = "navbar-brand nav-link-a text-light" })
                    </h3>



                    <!--<div class="my-auto">
                        <nav class="navbar bg-light">
                            <a class="dropdown-toggle" href="#" data-toggle="collapse" role="button" data-target="#navbarUser" aria-controls="navbarUser" aria-expanded="true" aria-label="Toggle navigation">
                                @HttpContext.Current.User.Identity.Name
                            </a>
                            <div class="dropdown-menu" id="navbarUser">
                                @Html.ActionLink("Sign out", "SignOut", "Account", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </nav>
                    </div>

                    <div class="ml-auto pt-1">
                        <button id="closeSidebar" type="button" title="Close sidebar" class="btn rounded-circle font-weight-bold">
                            &times;
                        </button>
                    </div>-->



                </div>
                <hr />
            </div>
        </div>

        <ul class="left_nav_list">
            <li>
                <nav class="navbar">
                    <a class="nav-link-a h4 w-100" data-toggle="collapse" data-target="#navbarContracts" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        Contracts
                    </a>
                    <div class="navbar-collapse collapse" id="navbarContracts">
                        <ul>
                            <li>
                                @Html.ActionLink("List", "Index", "Contracts", new { }, new { @class = "h4 nav-link nav-link-a" })
                            </li>
                            <li>
                                @Html.ActionLink("Create", "Create", "Contracts", new { }, new { @class = "h4 nav-link nav-link-a" })
                            </li>
                        </ul>
                    </div>
                </nav>
            </li>

            @if (HttpContext.Current.User.IsInRole("admin") || true)
            {
                <li>
                    <nav class="navbar">
                        <a class="nav-link-a h4 w-100" data-toggle="collapse" data-target="#navbarAdmin" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            Users
                        </a>
                        <div class="navbar-collapse collapse" id="navbarAdmin">
                            <ul>
                                <li>
                                    @Html.ActionLink("List", "Index", "Users", new { }, new { @class = "h4 nav-link nav-link-a" })
                                </li>
                                <li>
                                    @Html.ActionLink("Create", "Create", "Users", new { }, new { @class = "h4 nav-link nav-link-a" })
                                </li>
                                <li>
                                    @Html.ActionLink("Edit", "Edit", "Users", new { }, new { @class = "h4 nav-link nav-link-a" })
                                </li>
                            </ul>
                        </div>
                    </nav>
                </li>
            }

            @if (HttpContext.Current.User.IsInRole("editor") || true)
            {
                <li>
                    <nav class="navbar">
                        <a class="nav-link-a h4 w-100" data-toggle="collapse" data-target="#navbarEditor" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            Templates
                        </a>
                        <div class="navbar-collapse collapse" id="navbarEditor">
                            <ul>
                                <li>
                                    @Html.ActionLink("List", "Index", "Templates", new { }, new { @class = "h4 nav-link nav-link-a" })
                                </li>
                                <li>
                                    @Html.ActionLink("Create", "Create", "Templates", new { }, new { @class = "h4 nav-link nav-link-a" })
                                </li>
                            </ul>
                        </div>
                    </nav>
                </li>
            }
        </ul>
    </nav>
</aside>

<nav class="navbar fixed-top shadow">
    <div class="d-flex flex-row align-items-center w-100">
        <button id="sidebarCollapse" class="btn rounded-circle navbar-button">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </button>
        <div id="nav-title" class="px-3 text-truncate text-light h4">
            @ViewBag.Title
        </div>
    </div>
</nav>


<div class="body-content" style="margin: 30px 65px;">
    @RenderBody()
    <div class="overlay"></div>
    <div class="fixed-bottom bg-light p-3">
        <footer>
            <p>&copy; @DateTime.Now.Year - SmarTreaty - Igor Turtsevich, Anton Rekuts, Vitaly Vasiliev</p>
        </footer>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Scripts/_layout.js")
@RenderSection("scripts", false)
</body>
</html>