@model SmarTreaty.ViewModels.Accounts.RegisterViewModel
@{
    ViewBag.Title = "Sign up";
}


<div class="w-50 m-auto" style="padding-top: 10vh;">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="m-auto" style="max-width: 400px;">
            <h2 class="col-md-10">Sign up</h2>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "Login" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PasswordConfirmation, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "Password Confirmation" } })
                    @Html.ValidationMessageFor(model => model.PasswordConfirmation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "First Name" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "Last Name" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "Middle Name" } })
                    @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Wallet, new { htmlAttributes = new { @class = "form-control m-auto", autocomplete = "off", placeholder = "Wallet" } })
                    @Html.ValidationMessageFor(model => model.Wallet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.CheckBox("agreement")
                    @Html.Label("", "Agree with Terms and Data Policy", new { @for="agreement" })
                </div>
                
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-10">
                <button id="signup" type="submit" disabled class="btn btn-primary w-100">Sign up</button>
                <div class="d-flex mt-2">
                    <div class="mx-auto">
                        Have an account?
                        @Html.ActionLink("Login", "Login", null, new { @class = "ml-2" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {

    <script type="text/javascript">
        $("#agreement").change(() => {
            $("#signup").attr("disabled", function(_, attr){ return !attr});
        });
    </script>
}