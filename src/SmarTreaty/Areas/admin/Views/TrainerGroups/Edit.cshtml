@model SmarTreaty.ViewModels.TrainerGroups.EditTrainerGroupViewModel

@{
    ViewBag.Title = "Edit trainer group";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-2 font-weight-bold"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", autocomplete = "off"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 col-md-10">
                @Html.ActionLink("Cancel", "Index", null, new {@class = "btn btn-primary"})
                <input type="submit" value="Save" class="btn btn-warning float-right"/>
            </div>
        </div>
    </div>
}