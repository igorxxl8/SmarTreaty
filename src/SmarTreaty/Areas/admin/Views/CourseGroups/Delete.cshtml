@model SmarTreaty.ViewModels.CourseGroups.DeleteCourseGroupViewModel

@{
    ViewBag.Title = "Delete " + Model.Name + "?";
}

<div class="px-2">
    <h3>Are you sure you want to delete this course group?</h3>
    <dl class="dl-horizontal table-warning p-2">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Cancel", "Index", null, new {@class = "btn btn-primary"})
            <input type="submit" value="Delete" class="btn btn-danger float-right"/>
        </div>
    }
</div>