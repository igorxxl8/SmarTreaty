@model IEnumerable<SmarTreaty.Common.DomainModel.SmartContract>
@{
    ViewBag.Title = "Templates";
}

<div class="d-flex align-items-center" style="margin-top: -35px">
    <div class="flex-fill">
        @using (Html.BeginForm("Index", "Templates", FormMethod.Get))
        {
            <div class="d-flex py-3">
                @Html.TextBox("Search", null, new { autocomplete = "off", @class = "form-control w-50 mr-3", placeholder = "Type template name for search" })
                <input class="btn btn-primary" type="submit" value="Search" />
            </div>
        }
    </div>
        
    <div class="flex-fill">
        @Html.ActionLink("Create Template", "Create", "Templates", new { }, new { @class = "btn btn-secondary btn-block" })
    </div>

</div>


<table class="table table-bordered">
    <thead class="table-warning">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Abi
            </th>
        </tr>
    </thead>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No matches</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td style="width: 300px;">
                    @item.Name
                </td>
                <td style="width: 50%">
                    @item.Description
                </td>
                <td>
                    @item.Abi
                </td>
            </tr>
        }
    }
</table>